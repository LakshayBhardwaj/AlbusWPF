<Window x:Class="WpfAlbus.CreateAlbumDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAlbus"
        mc:Ignorable="d"
        Title="CreateAlbumDialog" Height="110" Width="350" WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel>
            <TextBlock Text="Album Name" />
            <TextBox x:Name="ResponseTextBox" />
            <Button Content="OK" Click="OKButton_Click" />
            <TextBlock x:Name="error_message" Foreground="Red"/>
        </StackPanel>
    </Grid>
</Window>
